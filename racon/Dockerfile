# Dockerfile for Racon
FROM continuumio/miniconda3:4.10.3p0

ENV raconVer=1.4.20

LABEL software="Racon"
LABEL software.version="${raconVer}"
LABEL description="Racon is a standalone consensus module to correct raw contigs generated by rapid assembly methods which do not include a consensus step."
LABEL website="https://github.com/lbcb-sci/racon"
LABEL license="https://github.com/lbcb-sci/racon/blob/master/LICENSE"

ENV DEBIAN_FRONTEND noninteractive
# install medaka from BioConda
RUN conda update -n base -c defaults conda && \
    conda config --add channels defaults && \
    conda config --add channels bioconda && \
    conda config --add channels conda-forge && \
    conda install racon==${raconVer} && \
    conda clean -a

# for singularity compatibility
ENV LC_ALL=C

# setting workdir
RUN mkdir /data
WORKDIR /data

# simple executor
CMD ["/bin/bash" "-c"]